@model List<IdentityRole>

@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <p>عملیات با موفقیت انجام شد</p>
    </div>
}
else if (TempData["FaildMessage"] != null)
{
    <div class="alert alert-success">
        <p>عملیات ناموفق بود</p>
    </div>
}
<table class="table table-bordered table-secondary">
    <thead>
        <tr>
            <th scope="col">RoleId</th>
            <th scope="col">RoleName</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr><td colspan="3">No User</td></tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Users" method="post">
                            <input type="hidden" value="@item.Id" name="id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Roles" class="btn btn-success">Create Role</a>